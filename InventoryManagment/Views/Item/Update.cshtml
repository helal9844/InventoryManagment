@model BL.ItemWriteDTO
@{
    ViewData["Title"] = "Update Item";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Update" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="ItemName"></label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Catagory"></label>
        <input asp-for="Catagory" class="form-control" />
        <span asp-validation-for="Catagory" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>